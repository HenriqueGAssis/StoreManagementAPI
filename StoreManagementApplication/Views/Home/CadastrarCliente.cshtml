@model AplicativoDeVendas.Models.Cliente

@{
    ViewData["Title"] = "Cadastrar Novo Cliente";
}

<h1>Cadastrar Novo Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nmCliente" class="control-label">Nome</label>
                <input asp-for="nmCliente" class="form-control" />
                <span asp-validation-for="nmCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 15px;">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
                <input type="submit" style="width: 85px;" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
