@model AplicativoDeVendas.Models.Produto

@{
    ViewData["Title"] = "Novo Produto";
}

<h1>Novo Produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SalvarProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="dscProduto" class="control-label">Descrição</label>
                <input asp-for="dscProduto" class="form-control" type="text" />
                <span asp-validation-for="dscProduto" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="vlrUnitario" class="control-label">Valor Unitário</label>
                <input asp-for="vlrUnitario" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="vlrUnitario" class="text-danger"> </span>
            </div>
            <div class="form-group" style="padding-top: 15px;">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
                <input type="submit" style="width: 85px;" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
