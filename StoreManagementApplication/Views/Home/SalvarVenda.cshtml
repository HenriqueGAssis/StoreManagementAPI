@model AplicativoDeVendas.Models.Venda

@{
    ViewData["Title"] = "Nova Venda";
}

<h1>Nova Venda</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SalvarVenda">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idCliente" class="control-label">Cliente ID</label>
                <input asp-for="idCliente" class="form-control" />
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idProduto" class="control-label">Produto ID</label>
                <input asp-for="idProduto" class="form-control" />
                <span asp-validation-for="idProduto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qtdVenda" class="control-label">Quantidade</label>
                <input asp-for="qtdVenda" class="form-control" />
                <span asp-validation-for="qtdVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vlrUnitarioVenda" class="control-label">Valor Unitário</label>
                <input asp-for="vlrUnitarioVenda" type="number" class="form-control" />
                <span asp-validation-for="vlrUnitarioVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dthVenda" class="control-label">Data</label>
                <input asp-for="dthVenda" class="form-control" />
                <span asp-validation-for="dthVenda" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top: 15px;">
                <a class="btn btn-primary" asp-action="Index">Voltar</a>
                <input type="submit" style="width: 85px;" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
